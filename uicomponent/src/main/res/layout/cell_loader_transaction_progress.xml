<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/vIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">

            <View
                android:id="@+id/vPoints"
                android:layout_width="@dimen/icon_size_x_small"
                android:layout_height="@dimen/icon_size_x_small"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_gray_rounded" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/vIndicator"
            android:layout_toRightOf="@id/vIndicator"
            android:orientation="vertical">

            <View
                android:layout_width="200dp"
                android:layout_height="@dimen/placeholder_text_height_large"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/bg_gray_rounded" />

            <View
                android:layout_width="150dp"
                android:layout_height="@dimen/placeholder_text_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_gray_rounded" />

        </LinearLayout>

    </RelativeLayout>

</com.facebook.shimmer.ShimmerFrameLayout>